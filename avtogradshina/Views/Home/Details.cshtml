@model avtogradshina.Models.Admin.Product
@{
    Layout = null;
}
<div class="col-12 center-block">
    <div class="thumbnail product-item center-block">
        <div class="modal-header">
            <button class="close" data-dismiss="modal" area-hidden="true">X</button>
            <h4>Описание</h4>
        </div>
        <div class="modal-body">
            <img alt="" class="img center-block img-responsive"
                 style="max-width: 680px;
        width: 100%;"
                 src="@Html.DisplayFor(model => model.Path)" />
            <br>
            <dl class="dl-horizontal center-block">
                <dt>Категория:</dt>
                <dd>@Html.DisplayFor(model => model.Category.Name)</dd>

                <dt>Название модели:</dt>
                <dd>@Html.DisplayFor(model => model.Name)</dd>
                
                <dt>Стоимость &#8381</dt>
                <dd>@Html.DisplayFor(model => model.Price)</dd>
            </dl>
        </div>
    </div>
</div>
