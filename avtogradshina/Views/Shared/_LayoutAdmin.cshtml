<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] -Панель Адмистратора</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        .placeholder {
            visibility: collapse;
            display: none
        }

            .placeholder:only-child {
                visibility: visible;
                display: flex
            }
    </style>
</head>


<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a asp-area="" asp-controller="Admin" asp-action="Index" class="navbar-brand">Панель Администратора</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row p-2">
            <div class="col-2">
                <a asp-controller="Orders" asp-action="Index"
                   class="@GetClassForButton("Orders")">
                    Заказы
                </a>
                <hr>
                <a asp-controller="Admin" asp-action="Index"
                   class="@GetClassForButton("Products")">
                    Продукция
                </a>
                <hr>
                <a asp-controller="Categories" asp-action="Index"
                   class="@GetClassForButton("Categories")">
                    Категория
                </a>
                <hr>
                <a asp-controller="Seed" asp-action="Index"
                   class="@GetClassForButton("Seed")">
                    Тестовая база товара
                </a>
                <hr>
                <a asp-controller="Roles" asp-action="Index" button="submit"
                   class="btn btn-danger">
                    Управление доступом
                </a>
            </div>
            <div class="col-9">
                @RenderBody()
            </div>
        </div>
        <footer class="col-xs-12">
            <div class="container text-center" style="color:lightgrey">
                <p>&copy; 2019 - avtogradshina.ru</p>
            </div>
        </footer>
    </div>

    @RenderSection("Scripts", required: false)
   </body>
 </html>

@functions {
string GetClassForButton(string controller)
{
    return "btn btn-block " + (ViewContext.RouteData.Values["controller"]
    as string == controller ? "btn-primary" : "btn-outline-primary");
}
}



